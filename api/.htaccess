<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

	RewriteRule (^|/)(tmp|include)(/|$) - [F]

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php?$1 [L,QSA]
</IfModule>

<IfModule !mod_rewrite.c>
    ErrorDocument 404 /index.php
</IfModule>